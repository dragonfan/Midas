<?xml version="1.0" encoding="utf-8"?>
<!--注：必须保证NativeAdContainer所有子view的可见性-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_ad_item_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_ad_item_height_82dp"
    android:background="@color/home_page_1a_white_bg"
    tools:background="@color/black"
    android:paddingLeft="12dp"
   >



        <LinearLayout
            android:id="@+id/ll_native_ad_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/common_ad_img_width_98dp"
                android:layout_height="@dimen/common_ad_img_height_66dp"
                android:scaleType="centerCrop"
                tools:src="@mipmap/dayu_tiny"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_7"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:maxWidth="138dp"
                    android:layout_height="wrap_content"
                    tools:text="广告文案广告文案广告文案广告文"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_subTitle"
                    android:layout_width="wrap_content"
                    android:maxWidth="185dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    tools:text="广告内容广告内容广告内容广告内容广告内容广告内容"
                    android:textSize="@dimen/dp_12"
                    android:textColor="#99FFFFFF"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />

            </RelativeLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即下载"
        android:textColor="#99FFFFFF"
        android:textSize="@dimen/dp_12"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_13dp"
        android:background="@drawable/home_down_load_bg"
        tools:ignore="MissingConstraints"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_ad_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:visibility="invisible"
        android:layout_gravity="right|top"
        />

    <TextView
        android:id="@+id/tv_ad_browse_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="87672人浏览"
        android:textColor="#7DFFFFFF"
        android:textSize="@dimen/dp_10"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dp_8"
        />

</RelativeLayout>
