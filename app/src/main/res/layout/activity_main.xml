<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <Button
        android:id="@+id/button_test_http"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试HTTP"
        android:visibility="gone"
       />
    <Button
        android:id="@+id/button_configinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取配置信息"
        />
    <Button
        android:id="@+id/button_ylh_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求广告(左图右文)"
        />
    <RelativeLayout
        android:id="@+id/first_weather_adrlyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@color/colorPrimary"
        />
    <Button
        android:id="@+id/button_chj_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求广告（全量）"
        android:visibility="visible"
        />
    <Button
        android:id="@+id/button_cms_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CMS下发广告"
        android:visibility="gone"
        />
</LinearLayout>