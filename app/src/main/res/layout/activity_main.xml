<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="渠道号:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_chan_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jinritoutiao"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_20"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业务线:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_20" />

        <EditText
            android:id="@+id/et_product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_20"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/button_configinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取配置信息" />

    <Button
        android:id="@+id/button_big_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="大图默认广告" />

    <Button
        android:id="@+id/button_big_img_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="大图标题居中广告" />

    <Button
        android:id="@+id/button_splash_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="开屏广告" />


</LinearLayout>