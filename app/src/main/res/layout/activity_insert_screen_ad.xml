<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_normal_browse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="普通插屏广告浏览类"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_normal_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="普通插屏广告下载类"
        app:layout_constraintTop_toBottomOf="@+id/btn_normal_browse" />

    <Button
        android:id="@+id/btn_fullscreen_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="全屏插屏广告下载类"
        app:layout_constraintTop_toBottomOf="@+id/btn_normal_download" />
</android.support.constraint.ConstraintLayout>